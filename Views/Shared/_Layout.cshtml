<!DOCTYPE html>
@{
    int intEmpDB_ID = 0;
    int intEmpID = 0;
    if (Session["LogEmpDbID"] != null)
    {
        string EmpDB_ID = (string)(Session["LogEmpDbID"]);
        intEmpDB_ID = Convert.ToInt32(EmpDB_ID);
    }
    if (Session["LogEmpID"] != null)
    {
        string EmpID = (string)(Session["LogEmpID"]);
        intEmpID = Convert.ToInt32(EmpID);
    }
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Case Logger", "AfterLogin", "Employees", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("My Cases", "MyCases", "Cases", new { id = intEmpDB_ID }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Home", "AfterLogin", "Employees", new { id = intEmpDB_ID }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Student Lookup", "StudentSearch", "Students")
                    </li>
                    <li>
                        @Html.ActionLink("Add New Case", "Create", "Cases", new { id = intEmpDB_ID }, null)
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

